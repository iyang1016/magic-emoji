<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bubbleIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bubble_background"
        android:padding="12dp"
        android:src="@drawable/ic_emogic_bubble"
        android:elevation="8dp" />

    <LinearLayout
        android:id="@+id/expandedMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/terminal_background"
        android:padding="8dp"
        android:layout_marginTop="64dp"
        android:visibility="gone"
        android:elevation="8dp">

        <Button
            android:id="@+id/encodeButton"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:text="ENCODE"
            android:textColor="@color/neon_green"
            android:fontFamily="monospace"
            android:textSize="13sp"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/decodeButton"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:text="DECODE"
            android:textColor="@color/neon_cyan"
            android:fontFamily="monospace"
            android:textSize="13sp"
            android:background="@drawable/button_secondary"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/closeButton"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:text="CLOSE"
            android:textColor="@color/neon_pink"
            android:fontFamily="monospace"
            android:textSize="13sp"
            android:background="@drawable/button_danger" />

    </LinearLayout>

</FrameLayout>
